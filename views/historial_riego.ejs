<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Historial de Riego</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/datatables.min.css" />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Riego Inteligente</a>
        <div class="d-flex">
          <a href="/" class="btn btn-outline-light me-2">Inicio</a>
          <span class="navbar-text text-white me-3"><%= correo %></span>
          <a href="/logout" class="btn btn-outline-light">Cerrar sesiÃ³n</a>
        </div>
      </div>
    </nav>

    <!-- Contenido principal -->
    <div class="container mt-5">
      <h3 class="text-center mb-4">ðŸ“œ Historial de Activaciones de Riego</h3>
      <table id="mi-tabla" class="table table-bordered text-center">
        <thead class="table-success">
          <tr>
            <th>ID</th>
            <th>Zona</th>
            <th>Tipo</th>
            <th>Valor</th>
            <th>Fecha</th>
          </tr>
        </thead>
        <tbody>
          <% lecturas.forEach(l => { %>
          <tr>
            <td><%= l.id %></td>
            <td><%= l.zona || 'Sin zona' %></td>
            <td><%= l.tipo %></td>
            <td><%= l.valor %> <%= l.unidad %></td>
            <td>
              <%= l.timestamp.toLocaleString ? l.timestamp.toLocaleString() :
              l.timestamp %>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="/js/datatables.min.js"></script>
    <script src="/js/i18n/es-ES.json"></script>
    <script>
      $(document).ready(function () {
        $("#mi-tabla").DataTable({
          language: {
            url: "/js/i18n/es-ES.json",
          },
        });
      });
    </script>
  </body>
</html>
