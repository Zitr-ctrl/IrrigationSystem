<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Sistema de Riego Inteligente</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- DataTables CSS -->
  <link rel="stylesheet" href="/css/datatables.min.css">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Riego Inteligente</a>
      <div class="d-flex">
        <a href="/" class="btn btn-outline-light me-2">Inicio</a>
        <a href="/historial" class="btn btn-outline-light me-2">Historial</a>
        
        <span class="navbar-text text-white me-3">
          <%= correo %>
        </span>
        <a href="/logout" class="btn btn-outline-light">Cerrar sesión</a>
      </div>
    </div>
  </nav>

  <!-- Contenido principal -->
  <div class="container mt-5">
    <h3 class="text-center mb-4">Registros del Sistema</h3>
    <table id="mi-tabla" class="table table-bordered text-center">
      <thead class="table-success">
        <tr>
          <th>ID</th>
          <th>Título</th>
          <th>Contenido</th>
        </tr>
      </thead>
      <tbody id="datos-tabla">
        <!-- Se insertarán los datos aquí -->
      </tbody>
    </table>
  </div>

  <!-- jQuery (requerido por DataTables) -->
  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

  <!-- DataTables JS -->
  <script src="/js/datatables.min.js"></script>

  <!-- DataTables en Español -->
  <script src="https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"></script>

  <!-- Bootstrap JS (opcional) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Script personalizado -->
  <script src="/js/main.js"></script>
</body>
</html>
