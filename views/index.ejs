<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Estado del Sistema de Riego</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .maceta-card {
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: 0.3s;
      }
      .maceta-card:hover {
        transform: scale(1.02);
      }
      .emoji {
        font-size: 2rem;
      }
    </style>
  </head>
  <body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Riego Inteligente</a>
        <div class="d-flex">
          <a href="/" class="btn btn-outline-light me-2">Inicio</a>
          <a href="/historial" class="btn btn-outline-light me-2">Historial</a>
          <span class="navbar-text text-white me-3"> <%= correo %> </span>
          <a href="/logout" class="btn btn-outline-light">Cerrar sesiÃ³n</a>
        </div>
      </div>
    </nav>

    <div class="container py-5">
      <h2 class="text-center mb-4">ðŸŒ± Estado Actual del Sistema de Riego</h2>

      <!-- Estado de la bomba -->
      <div
        class="alert <%= bombaEncendida ? 'alert-success' : 'alert-secondary' %> text-center"
      >
        <span class="emoji"><%= bombaEncendida ? 'ðŸ’¦' : 'ðŸ›‘' %></span>
        <strong>Bomba:</strong> <%= bombaEncendida ? 'Encendida' : 'Apagada' %>
      </div>

      <!-- Tarjetas de macetas -->
      <div class="row">
        <% macetas.forEach((maceta, index) => { %>
          <div class="col-md-4 mb-4">
            <div class="card maceta-card">
              <div class="card-body text-center">
                <h5 class="card-title">ðŸª´ Maceta <%= index + 1 %></h5>
                <p class="card-text">
                  Humedad: <strong><%= maceta.humedad %>%</strong><br />
                  <span class="emoji">
                    <% if (maceta.humedad >= 70) { %> ðŸ’§ <% } else if (maceta.humedad >= 40) { %> ðŸŒ¿ <% } else { %> ðŸ¥€ <% } %>
                  </span>
                </p>
                <small class="text-muted">Actualizado: <%= maceta.fecha %></small>
              </div>
              <!-- BotÃ³n para abrir el modal, ahora al final con espaciado -->
              <div class="card-footer text-center mt-3">
                <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#setHumedadModal" 
                        data-id="<%= maceta.id %>" data-zona="Maceta <%= index + 1 %>">
                  Establecer humedad
                </button>
              </div>
            </div>
          </div>
        <% }) %>
      </div>


    <!-- Modal para establecer niveles de humedad -->
    <div
      class="modal fade"
      id="setHumedadModal"
      tabindex="-1"
      aria-labelledby="setHumedadModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="setHumedadModalLabel">
              Establecer nivel de humedad
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="humedadForm">
              <div class="mb-3">
                <label for="macetaZona" class="form-label">Maceta</label>
                <input
                  type="text"
                  class="form-control"
                  id="macetaZona"
                  disabled
                />
              </div>
              <div class="mb-3">
                <label for="humedad" class="form-label"
                  >Nivel de humedad (%)</label
                >
                <input
                  type="number"
                  class="form-control"
                  id="humedad"
                  min="0"
                  max="100"
                  required
                />
              </div>
              <div class="mb-3">
                <button type="submit" class="btn btn-primary">
                  Establecer humedad
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS (opcional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <!-- Tu archivo JS -->
    <script src="/js/main2.js"></script>
  </body>
</html>
